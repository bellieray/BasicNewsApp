
<layout>
    <data>
        <variable
            name="newsFeature"
            type="com.example.basicnewsapp.ui.model.NewsFeatures" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.NewsDetail4">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:scaleType="centerCrop"
            android:alpha="0.6"
            android:src="@drawable/police" />

        <TextView
            android:id="@+id/news4Label"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_gravity="start"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="25dp"
            android:background="#061359" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/news4Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#090808"
                android:layout_marginLeft="45dp" />

            <TextView
                android:id="@+id/news4Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>

    </FrameLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/app_background"
        android:scrollbars="none">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="@string/fourthContentDetail"
            android:textColor="#000000"
            android:textSize="15sp" />

    </ScrollView>
</LinearLayout>
</layout>