<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="newsFeature"
            type="com.example.basicnewsapp.ui.model.NewsFeatures" />
    </data>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.view.NewsDetail1">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:src="@drawable/covidnedir" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic__58588" />

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

            <TextView
                android:id="@+id/news1Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:text="date" />

            <TextView
                android:id="@+id/news1Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Author : James Milner"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="25dp"
            android:background="#AAA" />

        <TextView
            android:id="@+id/news1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="monospace"
            android:textColor="#05011E"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:text="Haberbaslığı" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"

            android:scrollbars="none">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="390dp"
                    android:layout_height="369dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:text="@string/firstNewsContentDetail"
                    android:textColor="#000000"
                    android:textSize="15sp" />


        </ScrollView>


    </LinearLayout>
</FrameLayout>
</layout>